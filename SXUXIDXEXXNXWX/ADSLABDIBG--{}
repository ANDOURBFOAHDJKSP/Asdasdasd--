-- Input for Boat Floating Position
Tabs.Main:AddInput("Input", {
    Title = "Boat Floating Position",
    Default = "0",
    Placeholder = "Placeholder",
    Numeric = false,
    Finished = false,
    Callback = function(Value)
        BoatFlyPos = tonumber(Value) or BoatFlyPos
    end
})

-- Loop to update boat properties
spawn(function()
    while wait() do
        for _, boat in pairs(game:GetService("Workspace").Boats:GetChildren()) do
            if boat:IsA("Model") and boat:FindFirstChild("VehicleSeat") then
                local seat = boat.VehicleSeat
                seat.MaxSpeed = BoatSpeed
                seat.Torque = BoatTorque
                seat.TurnSpeed = BoatTurnSpeed

                if seat:FindFirstChild("BodyGyro") then
                    seat.BodyGyro.D = BoatDampening
                    seat.BodyGyro.P = BoatPampering
                end

                if seat:FindFirstChild("BodyPosition") then
                    seat.BodyPosition.D = BoatDampening
                    seat.BodyPosition.P = BoatPampering
                    seat.BodyPosition.Position = Vector3.new(0, BoatFlyPos, 0)
                end
            end
        end
    end
end)
